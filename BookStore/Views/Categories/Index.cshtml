
@model List<CategoryVM>

@{
    ViewData["Title"] = "Categories";
    var numberOfCategories = 1;
}

<section class="w-100 mx-2">
    <div class="d-flex justify-content-between align-items-center">
        <h1>Categories Index</h1>
        <div >
            <a class="btn btn-primary d-flex" asp-controller="Categories" asp-action="Add"><span>Add New Category</span> <span class="ms-2 fs-5"><i class="bi bi-plus"></i></i></span></a>
        </div>
    </div>

    @if (Model.Count() < 1)
    {
        <div class="alert alert-dismissible alert-info">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            <div class="d-inline-block  d-flex align-items-center">
                <i class="bi bi-exclamation-triangle"></i>
                <div class="ms-3">Sorry, No Categories Has Been Found</div>
            </div>
        </div>  
    }else
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">CategoryName</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var category in Model)
                {
                    <tr>
                        <th scope="row">@numberOfCategories</th>
                        <td>@category.Name</td>
                        <td class="d-flex justify-content-center align-items-center">
                            <a asp-action="Update" asp-route-id="@category.Id" class="btn text-primary" title="Edit"><i class="bi bi-pencil-square"></i></a>
                            <a asp-action="Details" asp-route-id="@category.Id" class="btn text-info" title="Details"><i class="bi bi-three-dots-vertical"></i></a>
                            <a asp-action="Delete" asp-route-id="@category.Id" class="btn text-danger" title="Delete"><i class="bi bi-trash3-fill"></i></a>
                        </td>
                    </tr>
                    numberOfCategories++;
                }
            </tbody>
        </table>
    }
</section>

@section Styles {
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
}
@section Scripts{
    <script src="~/js/Component/CloseAlert.js"></script>
}