@model RoleFormVM
@{
	ViewData["Title"] = "Add New Role";
}
@section Header {
    Roles
}

<h2 class="text-center my-5">Add New Role</h2>

<section>
	<form asp-controller="Role" asp-action="Add" method="post" enctype="multipart/form-data">
		<div class="row-cols-lg-2 row-cols-md-2">
			<label asp-for="Name" class="form-label mt-4">Role Name</label>
			<input asp-for="Name" type="text" class="form-control" placeholder="Enter Role Name">
			<small class="form-text text-muted"><span asp-validation-for="Name" class="text-danger"></span></small>
		</div>

		<div class="mt-5">
			<button class="btn btn-primary" type="submit">Add</button>
		</div>

	</form>
</section>

@section Scripts {
	<partial name="_ValidationScriptsPartial"></partial>
}