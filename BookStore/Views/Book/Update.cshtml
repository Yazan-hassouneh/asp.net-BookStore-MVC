@model UpdateBookVM
@{
	ViewData["Title"] = $"{Model.Name}";
}
@section Header {
    Books
}

<h2 class="text-center my-5">Update @Model.Name</h2>

<section>
	<form asp-controller="Book" asp-action="Update" method="post" enctype="multipart/form-data">
		<div class="row">
			<div class="col-12 col-md-6">
				<div class="">
					<label asp-for="Name" class="form-label mt-4">Book Title</label>
					<input asp-for="Name" type="text" class="form-control" placeholder="Enter Book Name">
					<small class="form-text text-muted"><span asp-validation-for="Name" class="text-danger"></span></small>
				</div>

				<div class="">
					<label asp-for="Price" class="form-label mt-4">Price</label>
					<input asp-for="Price" type="number" class="form-control" placeholder="Enter Price Name">
					<small class="form-text text-muted"><span asp-validation-for="Price" class="text-danger"></span></small>
				</div>

				<div class="">
					<label asp-for="ReleaseYear" class="form-label mt-4">Release Date</label>
					<input asp-for="ReleaseYear" type="text" class="form-control" placeholder="Date">
					<small class="form-text text-muted"><span asp-validation-for="ReleaseYear" class="text-danger"></span></small>
				</div>

				<div class="">
					<label asp-for="CategoriesId" class="form-label mt-4">Categories</label>
					<select asp-for="CategoriesId" asp-items="Model.CategoriesList" class="form-select js-example-basic-multiple" multiple="multiple">
					</select>
					<small class="form-text text-muted"><span asp-validation-for="CategoriesId" class="text-danger"></span></small>
				</div>

				<div class="">
					<label asp-for="AuthorsId" class="form-label mt-4">Authors</label>
					<select asp-for="AuthorsId" asp-items="Model.AuthorsList" class="form-select js-example-basic-multiple" multiple="multiple">
					</select>
					<small class="form-text text-muted"><span asp-validation-for="AuthorsId" class="text-danger"></span></small>
				</div>

				<div class="">
					<label asp-for="PublisherId" class="form-label mt-4">Publisher</label>
					<select asp-for="PublisherId" asp-items="Model.PublishersList" class="js-example-basic-single js-states form-control">
						<option value=""></option>
					</select>
					<small class="form-text text-muted"><span asp-validation-for="PublisherId" class="text-danger"></span></small>
				</div>

				<div class="">
					<label asp-for="Description" class="form-label mt-4">Description</label>
					<textarea asp-for="Description" class="form-control" rows="3"></textarea>
					<small class="form-text text-muted"><span asp-validation-for="Description" class="text-danger"></span></small>
				</div>

				<div class="">
					<label asp-for="Image" class="form-label mt-4">Choose Cover</label>
					<input asp-for="Image"
						   type="file" class="form-control"
						   data-rule-extension="@FileSettings.ImagesAllowedExtension.Replace(".", string.Empty)"
						   data-msg-extension="Not Allowed Extension"
						   data-rule-maxsize="@FileSettings.ImagesMaxSizeInBytes"
						   data-msg-maxsize="File Is Too Big, Choose File With Size Less Than @{
								@FileSettings.ImagesMaxSizeInMB
}MB">
					<small class="form-text text-muted d-block"><span asp-validation-for="Image" class="text-danger"></span></small>
				</div>

			</div>

			<div class="col-12 col-md-6">
				<img src="@($"{FileSettings.BooksImagesPath}{Model.ImagePath}")" alt="Cover Preview" id="ImagePreview" class="w-100 object-fit-cover" />
			</div>

		</div>

		<div class="mt-5">
			<button class="btn btn-primary" type="submit">Update</button>
		</div>

	</form>
</section>

@section Styles {
	<link href="~/lib/select2/css/select2.min.css" rel="stylesheet" />
}

@section Scripts {
	<partial name="_ValidationScriptsPartial"></partial>
	<script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>
	<script src="~/lib/select2/js/select2.min.js"></script>
	<script src="~/js/Image.js"></script>
	<script src="~/js/BookScripts/AddBookView.js"></script>
}